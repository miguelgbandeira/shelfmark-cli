  "author": "Miguel Bandeira",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "conf": "^11.0.1",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.5",
    "@types/node": "^20.10.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/miguelgbandeira/shelfmark-cli"
  },
  "bugs": {
    "url": "https://github.com/miguelgbandeira/shelfmark-cli/issues"
  },
  "homepage": "https://github.com/miguelgbandeira/shelfmark-cli#readme"
