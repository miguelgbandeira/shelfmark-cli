{
  "name": "shelfmark-cli",
  "version": "1.0.0",
  "description": "A beautiful CLI for the Shelfmark book/audiobook downloader API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "shelfmark": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "shelfmark",
    "books",
    "audiobooks",
    "downloader",
    "epub",
    "mobi",
    "m4b"
